<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Pollution Level Detector</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <link rel="stylesheet" href="styles.css">
    <style>
        body {
            display: flex;
            flex-direction: column;
            min-height: 100vh;
            margin: 0;
            background-color: #f0f0f0;
        }
        .inputBox-1{
            
            box-shadow: inset #abacaf 0 0 0 2px;
                    border: 0;
                    background: rgba(0, 0, 0, 0);
                    appearance: none;
                    width: 250px;
                    /* margin: 0px 19px 12px 0px; */
                    height: 40px;
                    position: relative;
                    border-radius: 3px;
                    padding: 9px 12px;
                    line-height: 1.4;
                    color: rgb(0, 0, 0);
                    font-size: 16px;
                    font-weight: 400;
                    height: 40px;
                    transition: all .2s ease;
                    :hover{
                        box-shadow: 0 0 0 0 #fff inset, #1de9b6 0 0 0 2px;
                    }
                    :focus{
                        background: #fff;
                        outline: 0;
                        box-shadow: 0 0 0 0 #fff inset, #1de9b6 0 0 0 3px;
                    }
                
        }

        .button-13 {
            background-color: #fff;
            border: 1px solid #d5d9d9;
            border-radius: 8px;
            box-shadow: rgba(213, 217, 217, .5) 0 2px 5px 0;
            box-sizing: border-box;
            color: #0f1111;
            cursor: pointer;
            display: inline-block;
            font-family: "Amazon Ember", sans-serif;
            font-size: 13px;
            line-height: 29px;
            padding: 0 10px 0 11px;
            position: relative;
            text-align: center;
            text-decoration: none;
            user-select: none;
            -webkit-user-select: none;
            touch-action: manipulation;
            vertical-align: middle;
            width: 250px;
            height: 40px;
        }

        .button-13:hover {
            background-color: #f7fafa;
        }

        .button-13:focus {
            border-color: #008296;
            box-shadow: rgba(213, 217, 217, .5) 0 2px 5px 0;
            outline: 0;
        }


        nav.navbar {
            margin-bottom: 0;
        }

        #container {
            width: 400px;
            height: 400px;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            position: relative;
            border: 5px solid #333;
            /* Frame around the container */
            border-radius: 10px;
            /* Rounded corners */
            background-color: #000000;
            /* Background color */
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
            /* Shadow effect */
            margin: 20px auto;
        }

        #loader-wrapper {
            position: absolute;
            width: 150px;
            height: 150px;
            display: flex;
            align-items: center;
            justify-content: center;
            top: 20px;
        }

        .loader {
            width: 150px;
            height: 150px;
            position: relative;
        }

        .loader .loading {
            font-size: 15px;
            position: absolute;
            width: 100%;
            text-align: center;
            line-height: 14px;
            font-family: 'Century Gothic', sans-serif;
            font-style: italic;
            left: 0;
            top: 50%;
            margin-top: 20px;
            color: #fff;
            font-weight: bold;
            text-transform: uppercase;
        }

        .loader-circle-1 {
            width: 138px;
            height: 138px;
            left: 5px;
            top: 5px;
            border: 1px #fff solid;
            border-radius: 50%;
            position: absolute;
            border-right-color: transparent;
            animation: spin 3s linear infinite;
        }

        .loader-circle-2 {
            width: 126px;
            height: 126px;
            left: 5px;
            top: 5px;
            border: 1px transparent solid;
            border-radius: 50%;
            position: absolute;
            border-right-color: #e81512;
            animation: spin 5s linear infinite;
        }

        .loader .line {
            width: 10px;
            height: 2px;
            background: #fff;
            position: absolute;
        }

        .loader .line:nth-child(1) {
            left: 16px;
            top: 50%;
            margin-top: -1px;
        }

        .loader .line:nth-child(2) {
            transform: rotate(45deg);
            left: 33px;
            top: 33px;
        }

        .loader .line:nth-child(3) {
            top: 16px;
            left: 50%;
            width: 2px;
            height: 10px;
        }

        .loader .line:nth-child(4) {
            transform: rotate(135deg);
            right: 33px;
            top: 33px;
        }

        .loader .line:nth-child(5) {
            right: 16px;
            top: 50%;
            margin-top: -1px;
        }

        .loader .line:nth-child(6) {
            transform: rotate(45deg);
            right: 33px;
            bottom: 33px;
            background: #e81512;
        }

        .loader .subline {
            position: absolute;
            width: 3px;
            height: 2px;
            background: #fff;
        }

        .loader .subline:nth-child(7) {
            transform: rotate(22.5deg);
            left: 21px;
            top: 50px;
        }

        .loader .subline:nth-child(8) {
            transform: rotate(67.5deg);
            left: 50px;
            top: 21px;
        }

        .loader .subline:nth-child(9) {
            transform: rotate(112.5deg);
            right: 50px;
            top: 21px;
        }

        .loader .subline:nth-child(10) {
            transform: rotate(157.5deg);
            right: 21px;
            top: 50px;
        }

        .loader .subline:nth-child(11) {
            transform: rotate(22.5deg);
            right: 20px;
            bottom: 49px;
            background: #e81512;
        }

        .loader .needle {
            width: 14px;
            height: 14px;
            border-radius: 50%;
            border: 1px #fff solid;
            position: absolute;
            left: 50%;
            top: 50%;
            margin: -8px 0 0 -8px;
            z-index: 1;
        }

        .loader .needle:before {
            content: "";
            width: 0;
            height: 0;
            border-style: solid;
            border-width: 3.5px 50px 3.5px 0;
            border-color: transparent #e81512 transparent transparent;
            position: absolute;
            right: 50%;
            top: 50%;
            margin: -3.5px 0 0 0;
            border-radius: 0 50% 50% 0;
        }

        @keyframes spin {
            0% {
                transform: rotate(0deg);
            }

            100% {
                transform: rotate(360deg);
            }
        }

        #pollutionInput {
            width: 100px;
            margin-top: 20px;
            height: 30px;
            text-align: center;
        }

        button {
            margin-top: 10px;
            padding: 10px 20px;
            font-size: 16px;
            cursor: pointer;
        }

        .footer {
            background-color: #333;
            color: #fff;
            text-align: center;
            padding: 10px 0;
            position: absolute;
            bottom: 0;
            width: 100%;
        }
    </style>
</head>

<body>
    <!-- Header -->
    <nav class="navbar navbar-default">
        <div class="container">
            <div class="navbar-header">
                <div class="boxLogo">
                    <p style="font-size: 3em; color: #777;padding: 2px;margin: auto;">
                        <img src="images/logo.jpeg" alt="" style="height: 65px;margin-right: 4px;">AriGo AirGaurd Pro
                    </p>
                </div>
            </div>
            <ul class="nav navbar-nav navbar-right">
                <li id="home"><a href="/">HOME</a></li>
                <li id="about"><a href="about">ABOUT US</a></li>
                <li id="contact"><a href="contact">CONTACT US</a></li>
                <li id="map"><a href="map">MAP</a></li>
            </ul>
        </div>
    </nav>

    <!-- Main Content -->
    <div id="container">
        <div id="loader-wrapper">
            <div class="loader">
                <div class="line"></div>
                <div class="line"></div>
                <div class="line"></div>
                <div class="line"></div>
                <div class="line"></div>
                <div class="line"></div>
                <div class="subline"></div>
                <div class="subline"></div>
                <div class="subline"></div>
                <div class="subline"></div>
                <div class="subline"></div>
                <div class="loader-circle-1">
                    <div class="loader-circle-2"></div>
                </div>
                <div class="needle"></div>
                <div class="loading">Pollution</div>
            </div>
        </div>
        <input type="number" style="color: white;" name="pollutionInput" class="inputBox-1" id="pollutionInput"
            placeholder="Value">
        <button onclick="updateNeedle()" class="button-13">Check</button>
    </div>
    <center>
        <button class="button-13"><a href="datas" style="text-decoration: none;">See More...</a></button>
    </center>
    <!-- Footer -->
    <div class="footer">

        <p>AriGo AirGaurd Pro</p>
    </div>

    <script>
        function updateNeedle() {
            const inputValue = document.getElementById('pollutionInput').value;
            const value = Math.min(Math.max(inputValue, 0), 500); // Clamp value between 0 and 500

            // The value should be between 0 and 500
            const minValue = 0;
            const maxValue = 500;

            // Calculate the angle for the needle. Assuming 180 degrees for full scale.
            const minAngle = 0;  // Start from 0 degrees (rightmost)
            const maxAngle = 180;   // End at 180 degrees (leftmost)
            const angle = minAngle + (value / maxValue) * (maxAngle - minAngle);

            // Update the needle rotation
            const needle = document.querySelector('.needle');
            needle.style.transformOrigin = '50% 50%'; // Ensure rotation occurs from the center
            needle.style.transform = `rotate(${angle}deg)`;
        }
    </script>
</body>

</html>